rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public products read, only sellers can write to their products (example)
    match /products/{productId} {
      allow read: if true;
      allow write: if isSeller() && request.auth.uid == request.resource.data.sellerId || isAdmin();
    }

    match /shops/{shopId} {
      allow read: if true;
      allow write: if isSeller() && request.auth.uid == resource.data.ownerId || isAdmin();
    }

    match /orders/{orderId} {
      allow create: if true; // anyone can create order (guest allowed)
      allow read: if request.auth != null && (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId) || isAdmin();
      allow update, delete: if isAdmin();
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
    }

    function isSeller() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'seller'
    }
  }
}
